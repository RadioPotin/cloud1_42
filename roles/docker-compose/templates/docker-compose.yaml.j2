version: '3.3'
services:
  nginx:
    image: nginx
    ports: 
      - 80:80
      - 443:443
    restart: always
    volumes:
      - ./hey.html:/var/www/html/hey.html
      - ./default.conf:/etc/nginx/conf.d/default.conf
      - ./html:/var/www/html
      - ./ssl/:/etc/ssl/

  wordpress:
    image: wordpress:php8.2-fpm-alpine
    depends_on:
      - wordpress_db
    ports:
      - 9000:9000
    restart: always
    environment:
      WORDPRESS_DB_HOST: {{ vault_wordpress_db_host }}
      WORDPRESS_DB_USER: {{ vault_wordpress_db_user }}
      WORDPRESS_DB_PASSWORD: {{ vault_wordpress_db_password }}
      WORDPRESS_DB_NAME: {{ vault_wordpress_db_name }}
      WORDPRESS_TABLE_PREFIX: wp_
      WORDPRESS_DEBUG: 0
    volumes:
      - ./html:/var/www/html

  wordpress_db:
    image: mariadb
    volumes:
      - db_data:/var/lib/mysql
    restart: always
    environment:
      MYSQL_HOST: {{ vault_mysql_host }}
      MYSQL_ROOT_PASSWORD: {{ vault_mysql_root_password }}
      MYSQL_DATABASE: {{ vault_mysql_db }}
      MYSQL_USER: {{ vault_mysql_user }}
      MYSQL_PASSWORD: {{ vault_mysql_password }}

  phpmyadmin:
    depends_on:
      - wordpress_db
    image: phpmyadmin/phpmyadmin
    ports:
      - 8181:8181
    restart: always
    environment:
      MYSQL_HOST: {{ vault_mysql_host }}
      PMA_HOST: {{ vault_pma_host }}
      MYSQL_ROOT_PASSWORD: {{ vault_pma_pwd }}
      APACHE_PORT: 8181

  # * Temp container to init website db
  setup:
    image: alpine
    depends_on:
      - wordpress_db
    volumes:
      - ./wordpressdb.sql:/tmp/wordpressdb.sql
    command: sh -c "apk add mysql-client && sleep 30 && mysql -u root --password={{ vault_mysql_root_password }} -h {{ vault_mysql_host }} {{ vault_mysql_db }} < /tmp/wordpressdb.sql"

volumes:
  db_data: